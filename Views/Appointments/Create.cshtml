@model PhysicalTherapyApp.ViewModels.CreateAppointmentViewModel
@{
    ViewData["Title"] = "Agendar Cita";
}

<div class="container">
    <div class="card fade-in" style="max-width: 700px; margin: 2rem auto;">
        <div class="card-header">
            Agendar Nueva Cita
        </div>
        <div class="card-body">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="ServiceId" class="form-label"></label>
                    <select asp-for="ServiceId" class="form-control" asp-items="ViewBag.Services">
                        <option value="">-- Seleccione un servicio --</option>
                    </select>
                    <span asp-validation-for="ServiceId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TherapistId" class="form-label"></label>
                    <select asp-for="TherapistId" class="form-control" asp-items="ViewBag.Therapists">
                        <option value="">-- Seleccione un terapeuta --</option>
                    </select>
                    <span asp-validation-for="TherapistId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AppointmentDate" class="form-label"></label>
                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control" id="AppointmentDate" />
                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Notes" class="form-label"></label>
                    <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Información adicional sobre su condición o necesidades..."></textarea>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn btn-primary" style="flex: 1;">
                        Agendar Cita
                    </button>
                    <a asp-action="Index" class="btn btn-outline" style="flex: 1;">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

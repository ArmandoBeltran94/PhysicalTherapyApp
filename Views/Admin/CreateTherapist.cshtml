@model PhysicalTherapyApp.ViewModels.CreateTherapistViewModel
@{
    ViewData["Title"] = "Crear Terapeuta";
}

<div class="container">
    <div class="card fade-in" style="max-width: 700px; margin: 2rem auto;">
        <div class="card-header">
            Crear Nuevo Terapeuta
        </div>
        <div class="card-body">
            <form method="post" asp-action="CreateTherapist">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" placeholder="Dr. Juan Pérez" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="terapeuta@ejemplo.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+52 123 456 7890" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" placeholder="••••••••" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Specialization" class="form-label"></label>
                    <input asp-for="Specialization" class="form-control" placeholder="Rehabilitación Deportiva" />
                    <span asp-validation-for="Specialization" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LicenseNumber" class="form-label"></label>
                    <input asp-for="LicenseNumber" class="form-control" placeholder="LIC-12345" />
                    <span asp-validation-for="LicenseNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="YearsOfExperience" class="form-label"></label>
                    <input asp-for="YearsOfExperience" type="number" class="form-control" placeholder="5" />
                    <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Bio" class="form-label"></label>
                    <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Biografía profesional del terapeuta..."></textarea>
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn btn-primary" style="flex: 1;">
                        Crear Terapeuta
                    </button>
                    <a asp-action="Therapists" class="btn btn-outline" style="flex: 1;">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

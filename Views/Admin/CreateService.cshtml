@model PhysicalTherapyApp.Models.Service
@{
    ViewData["Title"] = "Crear Servicio";
}

<div class="container">
    <div class="card fade-in" style="max-width: 700px; margin: 2rem auto;">
        <div class="card-header">
            Crear Nuevo Servicio
        </div>
        <div class="card-body">
            <form method="post" asp-action="CreateService">
                <div asp-validation-summary="All" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Ej: Terapia de Rehabilitación" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Descripción detallada del servicio..."></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="50.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DurationMinutes" class="form-label"></label>
                    <input asp-for="DurationMinutes" type="number" class="form-control" placeholder="60" />
                    <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label style="display: flex; align-items: center; gap: 0.5rem;">
                        <input asp-for="IsActive" type="checkbox" checked />
                        <span>Servicio Activo</span>
                    </label>
                </div>

                <div style="display: flex; gap: 1rem; margin-top: 2rem;">
                    <button type="submit" class="btn btn-primary" style="flex: 1;">
                        Crear Servicio
                    </button>
                    <a asp-action="Services" class="btn btn-outline" style="flex: 1;">
                        Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
